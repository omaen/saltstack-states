{% import_yaml 'gitlab-runner/defaults.yaml' as defaults %}

{% set base_settings = salt['grains.filter_by'](
    defaults,
    grain='os_family',
    merge=salt['pillar.get']('gitlab_runner:lookup'),
    base='gitlab_runner'
    )
%}

{% set gitlab_runner = salt['pillar.get'](
    'gitlab_runner',
    default=base_settings,
    merge=True
    )
%}
