{% import_yaml 'krb5/defaults.yaml' as defaults %}

{% set base_settings = salt['grains.filter_by'](
    defaults,
    grain='os_family',
    merge=salt['pillar.get']('krb5:lookup'),
    base='krb5'
    )
%}

{% set krb5 = salt['pillar.get'](
    'krb5',
    default=base_settings,
    merge=True
    )
%}
