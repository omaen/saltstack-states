{% import_yaml 'php/defaults.yaml' as defaults %}

{% set base_settings = salt['grains.filter_by'](
    defaults,
    grain='os_family',
    merge=salt['pillar.get']('php:lookup'),
    base='php'
    )
%}

{% set php = salt['pillar.get'](
    'php',
    default=base_settings,
    merge=True
    )
%}
