{% import_yaml 'sssd/defaults.yaml' as defaults %}

{% set base_settings = salt['grains.filter_by'](
    defaults,
    grain='os_family',
    merge=salt['pillar.get']('sssd:lookup'),
    base='sssd'
    )
%}

{% set sssd = salt['pillar.get'](
    'sssd',
    default=base_settings,
    merge=True
    )
%}
