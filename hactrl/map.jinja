{% import_yaml 'hactrl/defaults.yaml' as defaults %}

{% set base_settings = salt['grains.filter_by'](
    defaults,
    grain='os_family',
    merge=salt['pillar.get']('hactrl:lookup'),
    base='hactrl'
    )
%}

{% set hactrl = salt['pillar.get'](
    'hactrl',
    default=base_settings,
    merge=True
    )
%}
